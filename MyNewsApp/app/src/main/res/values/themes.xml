<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_royal</item>
        <item name="colorPrimaryVariant">@color/blue_royal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.NewsApp" parent="Base.Theme.NewsApp" />

    <style name="SearchViewText" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.NewsApp.TextTabLayout" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.NewsApp.ChooserTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/selector_tab_filter</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingTop">0dp</item>
        <item name="tabPaddingBottom">0dp</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/blue_royal</item>
        <item name="tabTextAppearance">@style/Theme.NewsApp.TextTabLayout</item>
    </style>
    <style name="RoundedSquare">
        <item name="cornerSize">4%</item>
    </style>
</resources>